{% macro nav_link(link, label, label_aux='', icon='') -%}
  <a href="{{ link }}" class="pm-Menu-navLink">
    {%- if icon -%}
      {%- if icon | length == 1 -%}
        <span class="pm-Menu-characterIcon">{{ icon }}</span>
      {%- else -%}
        <pm-icon>{{ icon }}</pm-icon>
      {%- endif -%}
    {%- endif -%}
    <span>
    {{ label }}
    {%- if label_aux -%}
    <span class="pm-Menu-labelAux"> {{ label_aux }}</span>
    {%- endif -%}
    </span>
  </a>
{%- endmacro %}

